# ========== Tushare配置 ==========
TUSHARE_TOKEN=your_tushare_token_here

# ========== 代理配置 ==========
USE_PROXY=false
PROXY_URL=http://proxy.example.com:8080

# ========== Webhook配置 ==========
WEBHOOK_URL=https://oapi.dingtalk.com/robot/send?access_token=xxx
WEBHOOK_SECRET=your_secret_here

# ========== 日志配置 ==========
LOG_LEVEL=INFO
DEBUG=false

# ========== 数据目录配置 ==========
DATA_DIR=~/stock_data
CACHE_DIR=~/.cache/aytrading

# ========== 数据库配置 ==========
DATABASE_PATH=~/stock_data/stock_data.db
# DATABASE_URL=sqlite:///~/stock_data/stock_data.db

# ========== API配置 ==========
API_TIMEOUT=30.0
API_RETRY_COUNT=3

# ========== 异步配置 ==========
ASYNC_ENABLED=true
ASYNC_MAX_WORKERS=10

# ========== 缓存配置 ==========
CACHE_ENABLED=true
CACHE_TTL=3600

# ========== 功能开关 ==========
# FEATURE_XXX_ENABLED=true
